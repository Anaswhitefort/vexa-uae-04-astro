---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Waitlistform from "@components/waitlistform.astro";
---

<Layout title="Waitlist">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Waitlist</Fragment>
      <Fragment slot="desc">
        Your Help Center deserves to <span class="font-bold"> actually</span> be
        used
      </Fragment>
    </Sectionhead>

    <div class="mx-auto mt-16 grid max-w-5xl gap-10 md:grid-cols-2">
      <div>
        <h2 class="text-2xl font-medium text-gray-800">
          No commitment. No spam. No sales people.
        </h2>
        <p class="mt-3 text-lg leading-relaxed text-slate-500">
          We'll reach out within one business day with more information.
        </p>
        <div class="mt-5">
          <div class="mt-2 flex items-center space-x-2 text-gray-600">
            <Icon class="h-4 w-4 text-gray-400" name="uil:map-marker" />
            <span>Berlin, Germany</span>
          </div><div class="mt-2 flex items-center space-x-2 text-gray-600">
            <Icon class="h-4 w-4 text-gray-400" name="uil:envelope" /><a
              href="mailto:wiselydesk@gmail.com">wiselydesk@gmail.com</a
            >
          </div>
        </div>
      </div>
      <div>
        <Waitlistform />
      </div>
    </div>
  </Container>
</Layout>
